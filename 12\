//Программа генерирует множество случайных чисел размера n в диапазоне (min, max),
//где n, min, max вводятся с клавиатуры. После чего подсчитывает выводит сумму, которая получается следующим образом:
//все числа, номера которых совпадают с дробной частью одного из исходных чисел - вычитаются, все остальные прибавляются.
#include <stdlib.h> 
#include <stdio.h>
#include <time.h>
//---------------------


int main()
{
int n,i;
double ran,min,max,sum;

printf("Введите количество чисел\n");
scanf("%d\n",&n);
     
printf("Введите диапазон min,max\n");
scanf("%lf",&min);
scanf("%lf",&max);
    
srand(time(NULL)); 
//---------------------

for ( i=0; i<n+1; i++)
{                
        ran= min + (double)rand()/ RAND_MAX *(max-min+1); //создаю рандомное число
        printf("%d", i); //вывожу номер
        printf(" ");
        printf("%lf\n", ran); //вывожу число
      
        if (i<10)
      {     
        int s=ran*10;//нахожу первое число после запятой
        float d=s%10;
        if (d==i)//равно ли это число номеру?           
        sum=sum-ran;
                               
        else //если не равно
         {
             sum=sum+ran;                        
         }                     
      }
        if  (i>10)
      {
          int s=ran*100;//нахожу первое число после запятой
          double d=s%100;
          if (d==i)//равно ли это число номеру?           
          sum=sum-ran;
          
          else //если не равно
         {
             sum=sum+ran;                        
         }                  
      } 
    if  (i>99){
            printf("Error: не вводите числа больше 100\n");
            break;
    }
}//закрываю фор
     
if ( n<100)
printf("%f",sum); // вывожу конечную сумму, но только до десяти чисел
                        
return 0;
} //закрываю главную функцию
